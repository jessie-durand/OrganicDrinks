{% extends 'base.html.twig' %}

{% block title %}Connexion Ã  l'espace administrateur{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div id="div-login">
        <div>
            <center>
                <img id="logo-login2" src="/images/logo.png">
            </center>
        </div>

		<h1 id="titre-login">
			Connexion
		</h1>

        <center>
            <form id="form-login" action="{{ path('login') }}" method="post">
                <div>
                    <input
                        id="username"
                        class="input-form"
                        type="text"
                        name="_username"
                        value="{{ last_username }}"
                        placeholder="E-mail"
                    />
                </div>

                <div>
                    <input class="input-form"
                        id="password"
                        type="password"
                        name="_password"
                        placeholder="Mot de passe"
                    />
                </div>

                <input type="hidden" name="_target_path" value="/choose-user-type"/>

                <button class="btn-login" type="submit">Se connecter</button>
            </form>
        </center>
	</div>
{% endblock %}
