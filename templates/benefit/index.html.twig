{% extends 'base.html.twig' %}

{% block title %}Benefit index{% endblock %}

{% block body %}
    <h1>Benefit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for benefit in benefits %}
            <tr>
                <td>{{ benefit.id }}</td>
                <td>{{ benefit.name }}</td>
                <td>{{ benefit.image }}</td>
                <td>{{ benefit.description }}</td>
                <td>
                    <a href="{{ path('benefit_show', {'id': benefit.id}) }}">show</a>
                    <a href="{{ path('benefit_edit', {'id': benefit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('benefit_new') }}">Create new</a>
{% endblock %}
