{% extends 'base.html.twig' %}

{% block title %}Connexion Ã  l'espace administrateur{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div id="div-login">
        <div>
            <img id="logo-login" src="/build/images/logo.png">
        </div>

		<h1 id="titre-login">
			Connexion
		</h1>

		<form id="form-login" action="{{ path('login') }}" method="post">
            <div>
			    <input
                    id="email"
                    class="input-form"
                    type="text"
                    name="_email"
                    placeholder="E-mail"
                />
            </div>

            <div>
                <input class="input-form"
                    id="password"
                    type="password"
                    name="_password"
                    placeholder="Mot de passe"
                />
            </div>

			<input type="hidden" name="_target_path" value="/choose-user-type"/>

			<button class="btn-login" type="submit">Se connecter</button>
		</form>
	</div>
{% endblock %}
