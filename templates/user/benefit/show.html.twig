{% extends 'base.html.twig' %}

{% block title %}Bienfait {{ benefit.name }}{% endblock %}

{% block body %}
{% include "user/userBase.html.twig" %}
    <h1>{{ benefit.name }}</h1>
        <div class="ingredientShow">
            <div class="showBody">
