{% extends 'base.html.twig' %}

{% block title %}Ingredient {{ ingredient.name }}{% endblock %}

{% block body %}
{% include "user/userBase.html.twig" %}
    <h1>{{ ingredient.name }}</h1>
        <div class="ingredientShow">
            <div class="showBody">
                <img src="{{ingredient.image}}" alt="{{ ingredient.name }} poster">
                <div class="text">
                    <p>{{ ingredient.description }}</p>
                    <strong>Bienfaits :</strong>
                    <p>
                    {% for benefit in ingredient.benefits %}
                        <a href="{{ path('benefit_show', {'id': benefit.id}) }}">{{ benefit.name }}</a>
                    {% else %}
                    <p>Aucun élément pour ce produit</p>
                    {% endfor %}
                    </p>
                </div>
                <div class="liens">
                    <p> Les Boissons :</p>
                        {% for drink in ingredient.drinks %}
                            <li>
                                <a href="{{ path('drink_show', {'id' : drink.id}) }}">
                                {{drink.name}}
                                </a>
                            </li>
                        {% endfor %}
                </div>
            </div>
        </div>

        <center>
            <div class="btn">
                <a href="{{ path('ingredient_index') }}">
                    Retour
                </a>
            </div>
        </center>
</div>
{% include "user/userFooter.html.twig" %}
{% endblock %}
